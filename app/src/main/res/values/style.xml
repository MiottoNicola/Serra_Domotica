<resources>
    <style name="Base.Theme.Serra_Domotica" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/DarkButton</item>
    </style>

    <style name="Theme.Serra_Domotica" parent="Base.Theme.Serra_Domotica" />

    <style name="DarkButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#005f99</item> <!-- Darker shade of blue -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text color -->
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@android:color/black</item>
        <item name="subtitleTextColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>